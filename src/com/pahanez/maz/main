package com.pahanez.maz;

import android.app.Activity;
import android.content.Context;
import android.content.Intent;
import android.os.Bundle;
import android.support.v4.app.ActionBar;
import android.support.v4.app.FragmentActivity;
import android.support.v4.view.Menu;
import android.support.v4.view.MenuItem;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.view.ViewGroup.LayoutParams;
import android.widget.AdapterView;
import android.widget.AdapterView.OnItemClickListener;
import android.widget.BaseAdapter;
import android.widget.GridView;
import android.widget.ImageView;
import android.widget.TabHost;
import android.widget.TabHost.OnTabChangeListener;
import android.widget.TabHost.TabSpec;
import android.widget.Toast;

public class MainMaz extends FragmentActivity implements OnTabChangeListener {
	TabHost th;
	TabSpec trucks, buses, trailers, heavy;

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		// TODO Auto-generated method stub
		super.onCreate(savedInstanceState);
		setContentView(R.layout.mainmaz);

		ActionBar ab = getSupportActionBar();
		getSupportActionBar().setDisplayHomeAsUpEnabled(true);
		
		th = (TabHost) findViewById(R.id.tabhost);

		th.setup();
		th.setOnTabChangedListener(this);

		trucks = th.newTabSpec("tag1");
		// specs.setContent(R.id.tab1);
		trucks.setIndicator("", getResources().getDrawable(R.drawable.truck))
				.setContent(R.id.svHeavyTrucks);
		th.addTab(trucks);

		buses = th.newTabSpec("tag2");
		// specs.setContent(R.id.sv2);
		buses.setIndicator("", getResources().getDrawable(R.drawable.buss))
				.setContent(R.id.llc);
		th.addTab(buses);

		trailers = th.newTabSpec("tag3");
		trailers.setContent(R.id.tab3);
		trailers.setIndicator("", getResources()
				.getDrawable(R.drawable.trailer));
		th.addTab(trailers);

		heavy = th.newTabSpec("tag4");
		heavy.setContent(R.id.tab4);
		heavy.setIndicator("", getResources().getDrawable(R.drawable.heavy));
		th.addTab(heavy);

		for (int i = 0; i < th.getTabWidget().getChildCount(); i++)

		{
			th.getTabWidget()
					.getChildAt(i)
					.setBackgroundColor(
							getResources().getColor(R.color.bgColor1));

		}
		th.getTabWidget().getChildAt(th.getCurrentTab())
				.setBackgroundColor(getResources().getColor(R.color.bgColor2));

	}

	@Override
	public void onTabChanged(String tabId) {
		// TODO Auto-generated method stub
		for (int i = 0; i < th.getTabWidget().getChildCount(); i++) {
			th.getTabWidget()
					.getChildAt(i)
					.setBackgroundColor(
							getResources().getColor(R.color.bgColor1));
		}
		th.getTabWidget().getChildAt(th.getCurrentTab())
				.setBackgroundColor(getResources().getColor(R.color.bgColor2));
	}

	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		/*
		 * menu.add("Text") .setShowAsAction(MenuItem.SHOW_AS_ACTION_ALWAYS |
		 * MenuItem.SHOW_AS_ACTION_WITH_TEXT);
		 */
		menu.add("")
				.setIcon(R.drawable.about)
				.setShowAsAction(
						MenuItem.SHOW_AS_ACTION_ALWAYS
								| MenuItem.SHOW_AS_ACTION_WITH_TEXT);

		return super.onCreateOptionsMenu(menu);
	}

}
